@inherits LayoutComponentBase

<PageTitle>@Title</PageTitle>

<SpawnDev.BlazorJS.PixiJS.Demo.Layout.RadzenThemeContainer Theme="material-dark" />

<!-- <link rel="stylesheet" href="css/radzen-tweak.css" /> -->

<RadzenComponents />
<RadzenLayout Style="grid-template-columns: auto 1fr auto; grid-template-areas: 'rz-header rz-header rz-header' 'rz-sidebar rz-body rz-right-sidebar'">
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0" JustifyContent="JustifyContent.SpaceBetween">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0" JustifyContent="JustifyContent.Left">
                <RadzenSidebarToggle Style="margin: 0 0.5rem 0 0;" Click="@(() => leftSidebarExpanded = !leftSidebarExpanded)" />
                <RadzenLabel Text="@Title" />
            </RadzenStack>
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0" JustifyContent="JustifyContent.Right">
                <AppTrayArea></AppTrayArea>
                <RadzenSidebarToggle Style="@($"margin: 0; {(rightSidebarEnabled ? "" : "display: none;")}")" Click="@(() => rightSidebarExpanded = !rightSidebarExpanded)" />
            </RadzenStack>
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@leftSidebarExpanded" Responsive="true">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Examples" Icon="home" Path="" Match="NavLinkMatch.All" />
            <RadzenPanelMenuItem Text="Basic" Icon="dashboard">
                <RadzenPanelMenuItem Text="Container" Icon="crop_square" Path="examples/basic/container" />
                <RadzenPanelMenuItem Text="Container Pivot" Icon="rotate_90_degrees_ccw" Path="examples/basic/container-pivot" />
                <RadzenPanelMenuItem Text="Blend Modes" Icon="opacity" Path="examples/basic/blendmodes" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Text" Icon="text_fields">
                <RadzenPanelMenuItem Text="Pixi Text" Icon="title" Path="examples/basic/pixi-text" />
                <RadzenPanelMenuItem Text="Bitmap Text 1" Icon="font_download" Path="examples/basic/bitmap-text" />
                <RadzenPanelMenuItem Text="Bitmap Text 2" Icon="font_download" Path="examples/basic/bitmap-text2" />
                <RadzenPanelMenuItem Text="From Font" Icon="format_size" Path="examples/basic/from-font" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Graphics" Icon="palette">
                <RadzenPanelMenuItem Text="Simple" Icon="circle" Path="examples/graphics/simple-graphics" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Events" Icon="touch_app">
                <RadzenPanelMenuItem Text="Dragging" Icon="pan_tool" Path="examples/events/dragging" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Sprite" Icon="image">
                <RadzenPanelMenuItem Text="Animated Sprite" Icon="animation" Path="examples/sprite/animated-sprite" />
                <RadzenPanelMenuItem Text="Tiling Sprite" Icon="view_comfy" Path="examples/sprite/tiling-sprite" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Textures" Icon="texture">
                <RadzenPanelMenuItem Text="RenderTexture" Icon="photo_camera" Path="examples/textures/render-texture" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Masks" Icon="layers">
                <RadzenPanelMenuItem Text="Graphics Mask" Icon="visibility" Path="examples/masks/graphics-mask" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Meshes" Icon="hub">
                <RadzenPanelMenuItem Text="MeshRope (Snake)" Icon="timeline" Path="examples/meshes/mesh-rope" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Filters" Icon="filter_b_and_w">
                <RadzenPanelMenuItem Text="Blur Filter" Icon="blur_circular" Path="examples/filters/blur-filter" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Advanced" Icon="stars">
                <RadzenPanelMenuItem Text="Star Warp" Icon="auto_awesome" Path="examples/advanced/star-warp" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Tests" Icon="bug_report">
                <RadzenPanelMenuItem Text="Wrapper Verification" Icon="verified" Path="verification" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Playground" Icon="gamepad" Path="playground" />
            <RadzenPanelMenuItem Text="GitHub Repo" Icon="code" Path="https://github.com/LostBeard/SpawnDev.BlazorJS.PixiJS" Target="_blank" />
        </RadzenPanelMenu>
        <div class="rz-p-4">
            <!-- Left Sidebar -->
        </div>
    </RadzenSidebar>
    <RadzenBody Style="width: auto; position: relative; padding: 0;">
        <div style="position: absolute; left: 0; top: 0; right: 0; bottom: 0;">
            @Body
        </div>
    </RadzenBody>
    <RadzenSidebar Responsive="false" @bind-Expanded="@rightSidebarExpanded" Style="grid-area: rz-right-sidebar">
        <div class="rz-p-4">
            <!-- Right Sidebar -->
        </div>
    </RadzenSidebar>
</RadzenLayout>